<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="02dp"
    android:layout_marginEnd="05dp"
    android:layout_marginStart="03dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/type_9_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/bg_layout"
        android:visibility="gone"
        >


        <androidx.cardview.widget.CardView
            android:id="@+id/card_image_type9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="2:2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline"
            >

            <ImageView
                android:id="@+id/img_type_9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:background="@drawable/bg_layout"
                android:src="@drawable/ic_default_story" />

        </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/title_type_9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/guideline"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="14sp"
                android:lines="2"
                android:text="Title"
                android:textColor="@color/black"
                android:layout_margin="05dp"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.3" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <!--    Type 15 : Square image and side title LAYOUT-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/type_15_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"
        >


        <androidx.cardview.widget.CardView
            android:id="@+id/cardImage_15"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="2:2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline_15"
            app:layout_constraintTop_toTopOf="parent"
            >

            <ImageView
                android:id="@+id/img_type_15"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:background="@drawable/bg_layout"
                android:src="@drawable/ic_default_story" />

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/title_type_15"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline_15"
            app:layout_constraintBottom_toTopOf="@id/sub_title_type_15"
            android:textSize="13sp"
            android:text="Title"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:layout_marginTop="05dp"
            />

        <TextView
            android:id="@+id/sub_title_type_15"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/guideline_15"
            app:layout_constraintTop_toBottomOf="@id/title_type_15"
            android:textSize="12sp"
            android:text="Title"
            android:textColor="@color/light_black"
            android:layout_marginStart="10dp"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.3" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--Rectangle, circle Image layout and bottom title : Common Layout-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/type_18_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/cardViewLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">


            <androidx.cardview.widget.CardView
                android:id="@+id/card_image_type10_12"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="1dp"
                app:layout_constraintDimensionRatio="4:4"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:visibility="gone"
                >

                <ImageView
                    android:id="@+id/img_10_to_12"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:background="@drawable/bg_layout"
                    />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/card_image_type14"
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="1dp"
                app:layout_constraintDimensionRatio="8:4"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:visibility="gone"
                >

                <ImageView
                    android:id="@+id/img_14"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:background="@drawable/bg_layout"
                    />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardImage_circle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                app:cardElevation="12dp"
                android:innerRadius="0dp"
                android:shape="ring"
                app:cardCornerRadius="75dp"
                app:layout_constraintDimensionRatio="4:4"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:visibility="gone"
                >

                <ImageView
                    android:id="@+id/img_circle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/ic_default_story" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:visibility="gone"
                android:id="@+id/card_image_type18"
                android:layout_width="110dp"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="1dp"
                app:layout_constraintDimensionRatio="4:8"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/title_18"
                >

                <ImageView
                    android:id="@+id/img_18"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:background="@drawable/bg_layout"
                    />

            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <TextView
            android:id="@+id/title_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/title"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardViewLinearLayout" />

        <TextView
            android:id="@+id/sub_title_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/title"
            android:textColor="@color/light_black"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_18" />

    </androidx.constraintlayout.widget.ConstraintLayout>


<!--    only title with background border type 19-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/type_19_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/bg_layout"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/title_type_19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_weight="1"
            android:textSize="14sp"
            android:padding="05dp"
            android:text="Title"
            android:textColor="@color/black"
            android:layout_margin="05dp"/>



    </androidx.constraintlayout.widget.ConstraintLayout>


